{% extends "base.html.jinja" %}

{% block title %}Leaderboard{% endblock title %}

{% block content %}
<h1 class="text-center">{{self.title()}}</h1>
<div class="catalog catalog-variant">
    {% for i in range(2) %}
    <section class="box box-variant box-container">
        {% set top_count = 25 %}
        {% if loop.first %}
        <h2 class="text-center">Total recaps (top {{top_count}}):</h2>
        {% endif %}
        <div>
            {% for row in (rows[:top_count] if loop.first else rows[top_count:]) %}
            <div class="row-container">
                <p class="text-no-overflow"><a href="{{url_for("game", game_id = row["id"])}}">{{row["title"]}}</a></p>
                <p>{{row["unix_count"]}}</p>
            </div>
            {% endfor %}
        </div>
    </section>
    {% endfor %}
</div>
{% endblock content %}
