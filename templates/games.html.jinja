{% extends "base.html.jinja" %}

{% import "macros.jinja" as macros %}

{% block title %}Games{% endblock title %}

{% block content %}
<h1>{{self.title()}}</h1>
<div class="catalog">
    {% call(row) macros.pagination(rows, page) %}
    {{macros.catalog_entry(rows | selectattr("title", "==", row["title"]), row["title"], url_for("game", title = row["title"])) | indent}}
    {% endcall %}
</div>
{{macros.pagination_drawer(rows, page)}}
{% endblock content %}
